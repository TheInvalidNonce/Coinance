<div class="jumbotron">
  <h1 class="display-4">Your Wallets</h1>
  
  <% if current_user && !current_user.wallets.empty? %>
  
    <hr class="my-4">
    <div class="list-group">
      
    <% current_user.wallets.reverse.each do |wallet| %>
      <%= link_to user_wallet_path(current_user, @wallets), class: "list-group-item list-group-item-action flex-column align-items-start" do %>
      
        <h5 class="pull-right"><small class="text-muted"><%= wallet.updated_at.strftime("%A, %d %b %Y %l:%M %p") %></small></h5>
  
        <p class="mb-1">Wallet name: <%= wallet.name %></p>
        <p class="mb-1">Coin: <%= wallet.coin if wallet.coin %></p>
        <p class="mb-1">Coin Amount: <%= wallet.coin_amount %></p>
        <p class="mb-1">Amount you deposited: $<%= wallet.user_deposit %></p>
        <p class="mb-1">Net value: $<%= wallet.net_value %></p>
        
       <% end %>
    <% end %>
    
    </div>
    
  <% else %>
  
    <hr class="my-4">
    <p class="lead">You have not created any wallets. Please add a new wallet below.</p>
    
  <% end %>
  
  <hr class="my-4">
  <p class="lead">
    <%= link_to "Add A New Wallet", new_user_wallet_path(current_user, @wallet), class: "btn btn-primary btn-lg", role: "button" if current_user %>
  </p>
</div>