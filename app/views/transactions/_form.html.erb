<%= form_for transaction, url: {action: action} do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label "Amount" %>
  <%= f.number_field :amount %>
  <%= f.label "Quantity" %>
  <%= f.number_field :quantity %>
  <%= f.label "Price Per Coin (in fiat)" %>
  <%= f.number_field :price_per_coin %>
  <%= f.label "Exchange fee (if any)" %>
  <%= f.number_field :fee %>
  
  <%= f.submit "Create Transaction" %>
<% end %>