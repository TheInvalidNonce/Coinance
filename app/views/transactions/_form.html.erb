<%= form_for transaction, url: {action: action}, class: "form-group" do |f| %>
  
  <%= f.label :coin_id, "Select Coin Type", class: "col-form-label" %>
  <%= f.collection_select :coin_id, Coin.all, :id, :name, class: "custom-select" %><br>
  
  <%= f.label "Amount", class: "col-form-label" %>
  <%= f.number_field :amount, class: "form-control" %><br>
  
  <%= f.label "Quantity", class: "col-form-label"  %>
  <%= f.number_field :quantity, class: "form-control" %><br>
  
  <%= f.label "Price Per Coin (in fiat)", class: "col-form-label"  %>
  <%= f.number_field :price_per_coin, class: "form-control" %><br>
  
  <%= f.label "Exchange fee (if any)", class: "col-form-label"  %>
  <%= f.number_field :fee, class: "form-control" %><br>
  
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.submit "Create Transaction", class: "btn btn-primary" %>
<% end %>